{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-4 m-auto bg-white p-5 rounded">
            <form method="post">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                {% if app.user %}
                    <div class="mb-3">
                        Vous êtes connecté(e) en tant que {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
                    </div>
                {% endif %}

                <h1 class="h3 mb-3 font-weight-normal">Connexion</h1>
                <label for="inputEmail" class="form-label">Email</label>
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control mb-1" autocomplete="email" required autofocus>
                <label for="inputPassword" class="form-label">Password</label>
                <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                <div class="form-group mb-3 mt-3 d-flex justify-content-between">
                    <div class="checkbox">
                        <label class="form-label">
                            <input type="checkbox" name="_remember_me"> Souvenir de moi
                        </label>
                    </div>
                    <div>
                        <a href="{{ path('app_forgot_password_request') }}">Mot de passe oublié ?</a>
                    </div>
                </div>

                <div class="form-group d-flex justify-content-between align-items-center">
                    <button class="btn btn-lg btn-primary" type="submit">
                        Connexion
                    </button>
                    <a class="" href="{{ path('app_register') }}">Créer un compte</a>
                </div>
            </form>
        </div>
    </div>
{% endblock %}
